<h2><%= location.country  %></h2>
<a href="/locations/<%= location.id %>/edit">Edit</a>
<%- include('../partials/deleteForm.ejs', { url: `/locations/${location.id}` }) %>

<% if (picturesFromCountry.length > 0) { %>
  <h2>Pictures from country</h2>
  <% picturesFromCountry.map(picture => { %>
    <img width="320" height="240" src="<% picture.imagePath %>">
  <% }) %>
<% } %>
